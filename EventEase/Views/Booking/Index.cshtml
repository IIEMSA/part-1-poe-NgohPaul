@model IEnumerable<EventEase.Models.Booking>

@{
    ViewData["Title"] = "All Bookings";
}

<h1>All Bookings</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">Create New Booking</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>
                Booking ID
            </th>
            <th>
                Booking Date
            </th>
            <th>
                Event
            </th>
            <th>
                Venue
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var booking in Model)
        {
            <tr>
                <td>@booking.BookingId</td>
                <td>@booking.BookingDate.ToString("g")</td>
                <td>@booking.Event?.EventName</td>
                <td>@booking.Venue?.VenueName</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@booking.BookingId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@booking.BookingId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@booking.BookingId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
